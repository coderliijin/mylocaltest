<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/activity_main"
    android:layout_width="match_parent" android:layout_height="match_parent"
    
    tools:context="com.coderli.myapplication.databasetest.MainActivity">

    <Button
        android:text="添加"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="29dp"
        android:id="@+id/insert_data"
        android:layout_below="@+id/book_pages"
        android:layout_toEndOf="@+id/image" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/book_name"
        android:layout_below="@+id/image"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:text="书名:"
        android:textSize="25dp"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/book_name"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/image"
        android:layout_marginTop="19dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:text="价格:"
        android:textSize="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_alignBottom="@+id/book_prices"
        android:layout_alignEnd="@+id/textView2" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/book_prices"
        android:layout_below="@+id/book_author"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/book_author" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       
        android:id="@+id/book_author"
        android:layout_below="@+id/book_name"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/book_name" />

    <TextView
        android:text="作者:"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_above="@+id/book_prices"
        android:layout_alignStart="@+id/textView" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/book_pages"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/book_prices" 
        android:layout_below="@+id/book_prices"/>

    <TextView
        android:text="页数:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="24dp"
        android:layout_alignBottom="@+id/book_pages"
        android:layout_alignStart="@+id/textView2" />
</RelativeLayout>
